
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/diksha_white"
    android:padding="5dip"
    android:layout_height="match_parent">
<LinearLayout
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_height="match_parent"
        android:background="@color/diksha_white"

    android:orientation="vertical" >
    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/diksha_blue"
        android:text="Title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="4dp"
        android:id="@+id/tvChartTitle"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/chart"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="400dp">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/textLegend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:id="@+id/tvplan1"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:layout_weight="1"
                android:text="Account No." />

            <TextView
                android:id="@+id/tvplan6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:gravity="left"
                android:text="70331226754" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:id="@+id/tvplan2"
                android:text="Bill No." />

            <TextView
                android:id="@+id/tvplan7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="70331226754" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:id="@+id/tvplan3"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:layout_weight="1"
                android:text="Bill Date" />

            <TextView
                android:id="@+id/tvplan8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="70331226754" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:id="@+id/tvplan4"
                android:text="Monthly Charges" />

            <TextView
                android:id="@+id/tvplan9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:gravity="left"
                android:layout_marginLeft="5dp"
                android:text="70331226754" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:id="@+id/tvplan5"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:text="Adjustments" />

            <TextView
                android:id="@+id/tvplan10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:text="70331226754" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>
</ScrollView>