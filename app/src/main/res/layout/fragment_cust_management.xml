
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/diksha_white"
    android:padding="5dip"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/diksha_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvChartTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Title"
        android:textColor="@color/diksha_blue"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dip">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dip"
            android:text="Select Month:"
            android:textColor="@color/diksha_black" />


        <Spinner
            android:id="@+id/spinner_month"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/textLegend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:id="@+id/tvplan1"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:layout_weight="1"
                android:text="Account No." />

            <TextView
                android:id="@+id/tvplan6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:gravity="left"
                android:text="70331226754" />

        </LinearLayout>

       

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:id="@+id/tvplan2"
                android:text="Bill No." />

            <TextView
                android:id="@+id/tvplan7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="70331226754" />

        </LinearLayout>

        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:id="@+id/tvplan3"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:layout_weight="1"
                android:text="Bill Date" />

            <TextView
                android:id="@+id/tvplan8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="70331226754" />

        </LinearLayout>

        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:id="@+id/tvplan4"
                android:text="Monthly Charges" />

            <TextView
                android:id="@+id/tvplan9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:gravity="left"
                android:layout_marginLeft="5dp"
                android:text="70331226754" />

        </LinearLayout>

        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:id="@+id/tvplan5"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:text="Adjustments" />

            <TextView
                android:id="@+id/tvplan10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/diksha_black"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:text="70331226754" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>
</ScrollView>