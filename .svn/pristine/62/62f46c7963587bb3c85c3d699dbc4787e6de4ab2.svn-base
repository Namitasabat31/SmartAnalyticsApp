<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/diksha_orange"
    tools:context="smartanalytics.diksha.com.smartanalytics.LoginActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="30dip"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"

            android:background="@color/diksha_white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dip"
                    android:layout_height="100dp"

                    android:src="@drawable/diksha_full_logo"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:id="@+id/idUserName"
                android:textSize="16sp"
                android:drawableLeft="@mipmap/ic_person"
                android:inputType="textEmailAddress"
                android:textColor="@color/diksha_black"
                android:hint="@string/username"
                android:background="@drawable/edittext_login_bg"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_marginTop="7dip"
                android:drawableLeft="@mipmap/ic_lock"
                android:id="@+id/idPassword"
                android:textColor="@color/diksha_black"
                android:hint="@string/password"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:background="@drawable/edittext_login_bg"
                android:layout_height="45dip" />

            <Button
                android:id="@+id/btnSignin"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginTop="7dip"
                android:layout_height="45dip"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@color/diksha_orange"
                android:text="@string/signin"
                android:textColor="@color/diksha_white"
                android:textAllCaps="false"
                android:textSize="16sp" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
